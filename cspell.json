    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],

  // ignorePaths - Glob patterns of files to be ignored
  "ignorePaths": [
    "**/.git/objects/**",
    "**/.venv/**",
    "**/node_modules/**",
    "**/package-lock.json",
    "**/requirements/**",
    "**/venv/**",
    "**/vscode-extension/**"
  ]
}
