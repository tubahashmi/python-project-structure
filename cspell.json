    "csv (equals)",
    "csv (hyphen)",
    "csv (pipe)",
    "csv (semicolon)",
    "csv (tilde)",
    "csv (whitespace)",
    "diff",
    "dockerfile",
    "dotenv",
    "editorconfig",
    "env",
    "erlang",
    "excel",
    "fsharp",
    "git-rebase",
    "groovy",
    "hjson",
    "hlsl",
    "hosts",
    "http",
    "ignore",
    "ini",
    "jinja",
    "json5",
    "jsonl",
    "jsx-tags",
    "julia",
    "juliamarkdown",
    "jupyter",
    "jvmoptions",
    "log",
    "lua",
    "macro",
    "makefile",
    "objective-c",
    "objective-cpp",
    "parquet",
    "perl",
    "perl6",
    "pip-requirements",
    "powershell",
    "properties",
    "r",
    "rainbow hover markup",
    "razor",
